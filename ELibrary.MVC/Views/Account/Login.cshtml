@model LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "_HomeLayout";
    var returnUrl = !string.IsNullOrWhiteSpace(ViewBag.ReturnUrl) ? ViewBag.ReturnUrl : "";
}

<div class="container py-24">

    <div class="flex justify-center ">
        <div class="w-2\/4 bg-white p-6 shadow-2xl border-t-8 border-blue-600 " style="max-width:350px">
            <div class="py-4">
                <h2 class="text-3xl antialiased font-bold tracking-wide text-center">Login</h2>
            </div>

            <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@returnUrl">
                <div class="mb-4">
                    <div asp-validation-summary="All" class="text-danger forgotPass-list-error" style="list-style:none;"></div>
                    <label asp-for="@Model.Email" class="label"></label>
                    <input type="email" asp-for="@Model.Email" class="w-full input" />
                 
                </div>
                <div class="mb-4">
                    <label asp-for="@Model.Password" class="label"></label>
                    <input type="password" asp-for="@Model.Password" class="w-full input" />
                  
                </div>
                @*<div class="mb-4">
                        <input asp-for="@Model.RememberMe" class="input" />
                        <label asp-for="@Model.RememberMe" class="label"></label>
                    </div>*@
                <div class="flex justify-center">
                    <button type="submit" class="btn inline-block btn-primary">Login</button>
                </div>
                <div class="flex items-center justify-between">
                    <div class="text-xs">
                        Don't have an account?
                        <a asp-action="Register" asp-route-returnUrl="@returnUrl" class="text-blue-600 hover:underline">Register</a>
                    </div>

                </div>
                <div class="mx-auto mt-4 text-xs w-36">
                    <a asp-action="ForgotPassword" class="text-blue-600 hover:underline">Forgot Password</a>
                </div>
            </form>
        </div>
    </div>
</div>


