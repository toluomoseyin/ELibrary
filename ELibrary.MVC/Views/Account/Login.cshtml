@model LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "_HomeLayout";
    var returnUrl = @Context.Request.Query["ReturnUrl"];
}

<div class="container py-24">

    <div class="flex justify-center ">
        <div class="w-2\/4 bg-white p-6 shadow-2xl border-t-8 border-blue-600 ">
            <div class="py-4">
                <h2 class="text-3xl antialiased font-bold tracking-wide text-center">Login</h2>
            </div>

            <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@returnUrl">
                <div class="mb-4">
                    <label asp-for="@Model.Email" class="label"></label>
                    <input type="email" asp-for="@Model.Email" class="w-full input" />
                    <div class="mt-2 text-sm text-red-400 lowercase"> <span asp-validation-for="@Model.Email"></span>
                    </div>
                </div>
                <div class="mb-4">
                    <label asp-for="@Model.Password" class="label"></label>
                    <input type="password" asp-for="@Model.Password" class="w-full input" />
                    <div class="mt-2 text-sm text-red-400 lowercase"> <span asp-validation-for="@Model.Password"></span>
                    </div>
                </div>
                @*<div class="mb-4">
                    <input asp-for="@Model.RememberMe" class="input" />
                    <label asp-for="@Model.RememberMe" class="label"></label>
                </div>*@
                <div class="flex justify-center">
                    <button type="submit" class="btn inline-block btn-primary">Login</button>
                </div>
                <div class="flex items-center justify-between">
                    <div class="text-xs">
                        Don't have an account?
                        <a href="" class="text-blue-600 hover:underline">Register</a>
                    </div>

                </div>
                <div class="mx-auto mt-4 text-xs w-36">
                    <a href="" class="text-blue-600 hover:underline">Forgot Password</a>
                </div>
            </form>
        </div>
    </div>
</div>