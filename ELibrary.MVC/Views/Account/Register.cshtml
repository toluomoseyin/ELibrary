@model RegisterViewModel
@{
    Layout = "_HomeLayout";
    ViewBag.Title = "Register";
    var returnUrl = !string.IsNullOrWhiteSpace(ViewBag.ReturnUrl) ? ViewBag.ReturnUrl : "";
}

<div class="container py-24">
    <div class="flex justify-center">
        <div class="w-2\/4 bg-white p-6 shadow-2xl border-t-8 border-blue-600" style="max-width:400px">
            <div class="py-4">
                <h2 class="text-center font-bold text-3xl antialiased tracking-wide">Register</h2>
            </div>

            <form method="Post" asp-controller="Account" asp-action="Register" asp-route-returnUrl="@returnUrl">
                <div style="font-size:10px;color:red" asp-validation-summary="All"></div>

                <div class="mb-4">
                    <label asp-for="@Model.FirstName" class="label"></label>
                    <input asp-for="@Model.FirstName" type="text" class="input w-full" />
                    <div><span asp-validation-for="@Model.FirstName" class="text-red-600 italic text-sm"></span></div>
                </div>

                <div class="mb-4">
                    <label asp-for="@Model.LastName" class="label"></label>
                    <input asp-for="@Model.LastName" type="text" class="input w-full" />
                    <div><span asp-validation-for="@Model.LastName" class="text-red-600 italic text-sm"></span></div>
                </div>

                <div class="mb-4">
                    <label asp-for="@Model.Email" class="label"></label>
                    <input asp-for="@Model.Email" type="email" class="input w-full" />
                    <div><span asp-validation-for="@Model.Email" class="text-red-600 italic text-sm"></span></div>
                </div>

                <div class="mb-4">
                    <label asp-for="@Model.Password" class="label"></label>
                    <input asp-for="@Model.Password" type="password" class="input w-full" />
                    <div><span asp-validation-for="@Model.Password" class="text-red-600 italic text-sm"></span></div>
                </div>

                <div class="mb-4">
                    <label asp-for="@Model.ConfirmPassword" class="label"></label>
                    <input asp-for="@Model.ConfirmPassword" type="password" class="input w-full" />
                    <div><span asp-validation-for="@Model.ConfirmPassword" class="text-red-600 italic text-sm"></span></div>
                </div>

                <div class="flex justify-center mb-4">
                    <button type="submit" class="btn inline-block btn-primary">Register</button>
                </div>

                <div class="flex items-center justify-between">
                    <div>
                        Already have an account?
                        <a asp-action="Login" class="hover:underline text-blue-600">Login</a>
                    </div>

                </div>
            </form>
        </div>
    </div>


</div>


