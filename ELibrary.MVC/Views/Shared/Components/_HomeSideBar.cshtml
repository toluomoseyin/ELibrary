@model IEnumerable<CategoryViewModel>;

<div class="fixed w-1/6">
    <h3 class="pt-12 mb-4 font-semibold">Categories</h3>
    <ul class="mr-4">
        @foreach (var item in @Model)
        {
            <li class="">
                <a class="w-full inline-block py-2 pl-4 hover:text-gray-100 hover:bg-blue-400" 
                   asp-controller="Home" 
                   asp-action="GetByCategory" 
                   asp-route-categoryName="@item.Name" >
                @item.Name
                </a>
            </li>
        }
    </ul>
</div>